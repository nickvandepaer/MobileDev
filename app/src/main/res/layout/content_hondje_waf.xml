<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HondjeWafActivity"
    tools:showIn="@layout/activity_hondje_waf"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/luidspreker"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/luidspreker"
            android:textSize="25sp"
            android:layout_alignTop="@id/oorImg"
            android:onClick="Luidspreker_onClick"
            />

        <ImageView
            android:id="@+id/hond"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/dog"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/bot"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/bot"
            android:onClick="Bot_onClick"
            android:layout_marginLeft="10dp"
            />


        <LinearLayout
            android:id="@+id/afbeeldingen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/woord"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/woord1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_below="@id/woord"
                android:layout_margin="20dp"
                android:background="@drawable/border"
                android:onClick="Woord1_onClick"
                />

            <ImageView
                android:id="@+id/woord2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_below="@id/woord"
                android:layout_toRightOf="@id/woord1"
                android:background="@drawable/border"
                android:onClick="Woord2_onClick"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>