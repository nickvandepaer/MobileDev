<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FrontingStoppingActivity"
    tools:showIn="@layout/activity_fronting_stopping"

    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vraagteken"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vraagteken"
            android:textSize="25sp"
            android:layout_margin="5sp"
            android:onClick="Vraagteken_onClick"
            />

        <TextView android:id="@+id/Keuze"
            android:layout_height="wrap_content"
            android:text="Fonologisch proces"
            android:textSize="30sp"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:background="#34ade5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="200sp"/>
        <Button
            android:id="@+id/frontingBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Fronting"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:onClick="Fronting_onClick"
            android:background="#34ade5"
            android:layout_marginTop="90sp"
            />
        <Button
            android:id="@+id/stoppingBtn"

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Stopping"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/frontingBtn"
            android:onClick="Stopping_onClick"
            android:background="#34ade5"
            android:layout_marginTop="10sp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>